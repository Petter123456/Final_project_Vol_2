<div class="center jumbotron">
  <h1>MiamiGolf</h1>
  <%= link_to "Golf now","#", class: "btn btn-success btn-lg btn-xlarge" %>
  <div class="container responsive">
          <div class="row">
          <div class='col-sm-12'>
              <input type='text' class="form-control" id='datetimepicker4' />
          </div>
          <script type="text/javascript">
              $(function () {
                  $('#datetimepicker4').datetimepicker();
              });
          </script>
      </div>
  </div>
  <div id="map"></div>
      <script type="text/javascript">
          $(function () {
              $('#datetimepicker4').datetimepicker({
                  viewMode: 'years'
              });
          });
      </script>
  </div>
</div>
<table class="table table-hover ">
  <tbody>
    <tr>
      <th>
      <%= form_tag(root_path, method: "get") do %>
        <%= label_tag(:q, "Select Teetime Dates:") %>
        <%= date_field_tag(:usersdate) %><!--- This users input should go as params[:usersdate] in the place of "Date=01%2F28%2F2018" in the url string--->
        <%= submit_tag("Search") %>
      <% end %>
    </th>
    </tr>
    <tr>
      <th>
        Location
      </th>
      <th>
        Teetime
      </th>
      <!-- table headers goes here -->
    </tr>

      <% @request_tee_times["data"].each do |course| %>
      <tr>
        <th>
      <%= "CourseName #{course['courseName']}"%>
    </th>
    <th>
      <select><% course["teeTimes"].each do |tee| %>
      <option>  <%= tee["purchase"]["price"]%>
        <%= "teeTime #{tee['teeTime']}"%> </option>
      <%end%></select>
      <%end%>
    </th>
    </tr>
  </tbody>
</table>
